FROM python:3.11-slim

COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Install bun for frontend
RUN apt-get update && apt-get install -y curl unzip && \
    curl -fsSL https://bun.sh/install | bash && \
    ln -s /root/.bun/bin/bun /usr/local/bin/bun && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install Python dependencies (layer caching)
COPY pyproject.toml uv.lock ./
RUN uv sync --frozen --extra server --no-dev --no-install-project

# Install frontend dependencies (layer caching)
# Copy only package manifest for layer caching, then install inside container
# to get correct platform-native binaries (e.g. rollup for linux-arm64)
COPY ui/package.json ui/
RUN cd ui && bun install

# Copy source (volumes override this at runtime for hot-reload)
COPY stonks/ stonks/
COPY ui/ ui/
COPY README.md ./

RUN uv sync --frozen --extra server --no-dev
